    <!-- Mermaid.js for diagrams - Fixed for Pandoc output -->
    <script src="https://cdn.jsdelivr.net/npm/mermaid@11.6.0/dist/mermaid.min.js"></script>
    <script>
        console.log('üîç MermaidJS Debug: Starting initialization...');
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîç MermaidJS Debug: DOM loaded, mermaid available:', typeof mermaid !== 'undefined');
            
            if (typeof mermaid !== 'undefined') {
                try {
                    // Convert Pandoc's <pre class="mermaid"> to <div class="mermaid">
                    var preElements = document.querySelectorAll('pre.mermaid');
                    console.log('üîç MermaidJS Debug: Found ' + preElements.length + ' pre.mermaid elements');
                    
                    preElements.forEach(function(preElement, index) {
                        var code = preElement.querySelector('code');
                        var content = code ? code.textContent : preElement.textContent;
                        console.log('üîç MermaidJS Debug: Converting pre element ' + index + ' with content:', content.trim());
                        
                        // Create new div element
                        var divElement = document.createElement('div');
                        divElement.className = 'mermaid';
                        divElement.textContent = content.trim();
                        
                        // Replace pre with div
                        preElement.parentNode.replaceChild(divElement, preElement);
                    });
                    
                    // Initialize Mermaid
                    mermaid.initialize({
                        startOnLoad: true,
                        theme: 'neutral',
                        securityLevel: 'loose',
                        themeVariables: {
                            primaryColor: '#003087',
                            primaryTextColor: '#fff',
                            primaryBorderColor: '#DAAA00',
                            lineColor: '#003087',
                            background: '#ffffff'
                        }
                    });
                    console.log('‚úÖ MermaidJS Debug: Initialization complete');
                    
                    // Check rendering after 3 seconds
                    setTimeout(function() {
                        var mermaidElements = document.querySelectorAll('.mermaid');
                        console.log('üîç MermaidJS Debug: Found ' + mermaidElements.length + ' .mermaid elements after conversion');
                        
                        for (var i = 0; i < mermaidElements.length; i++) {
                            var element = mermaidElements[i];
                            if (element.innerHTML.includes('svg')) {
                                console.log('‚úÖ Element ' + i + ' rendered successfully');
                            } else {
                                console.error('‚ùå Element ' + i + ' failed to render');
                                console.log('Content:', element.textContent.trim());
                                
                                // Show error with improved content
                                element.innerHTML = '<div style="color: red; border: 1px solid red; padding: 10px; background: #ffe6e6;">' +
                                    '‚ùå Mermaid diagram failed to render<br>' +
                                    '<strong>Content:</strong><br>' +
                                    '<pre style="background: #f0f0f0; padding: 5px; margin: 5px 0; font-size: 12px;">' + 
                                    element.textContent.trim() + 
                                    '</pre>' +
                                    '<em>Check browser console for details</em>' +
                                '</div>';
                            }
                        }
                    }, 3000);
                    
                } catch (error) {
                    console.error('‚ùå MermaidJS Init Error:', error);
                }
            } else {
                console.error('‚ùå MermaidJS not loaded');
                var preElements = document.querySelectorAll('pre.mermaid');
                preElements.forEach(function(element) {
                    element.innerHTML = '<div style="color: red; border: 1px solid red; padding: 10px;">‚ùå MermaidJS library failed to load. Check internet connection.</div>';
                });
            }
        });
    </script>
    
